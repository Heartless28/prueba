@model onlineshop.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}


@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<h2>@ViewBag.Title.</h2>

<h4>Cree una cuenta nueva.</h4>
<hr />



<div class="panel panel-primary" style="width: 50%; margin:0 auto;" >
    <div class="panel-heading" style="background-color:#263238"></div>

        <div class="panel-body">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()


                @Html.ValidationSummary("", new { @class = "text-danger" })


                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-sm" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Address1, new { @class = "col-md-3 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.Address1, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.City, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.State, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.State, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Country, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.Country, new { @class = "form-control input-sm" })
                    </div>
                </div>
                
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-10">
                            <input type="submit" class="btn btn-default" value="Registrarse" />
                        </div>
                    </div>

                
            }

            
        </div>
    </div>



        @section Scripts {
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @Scripts.Render("~/bundles/jqueryval")
        }
